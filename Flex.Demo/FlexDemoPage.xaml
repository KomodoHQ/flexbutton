<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Flex.Demo"
    x:Class="Flex.Demo.FlexDemoPage"
    xmlns:flex="clr-namespace:Flex.Controls;assembly=Flex"
    BackgroundColor="White">

    <ScrollView>
        <StackLayout 
            Spacing="10" 
            Padding="0,10,0,10" 
            WidthRequest="380" 
            HorizontalOptions="Center"> 

            <!-- Standard Button -->    
            <flex:FlexButton
                x:Name="DemoButton"
                HorizontalOptions="Center"
                IconOrientation="Left"
                WidthRequest="76"
                HeightRequest="76"
                CornerRadius="38"
                Icon="lightbulb.png"
                ForegroundColor="#ffffff"
                HighlightForegroundColor="#49516F"
                BackgroundColor="#6279B8"
                HighlightBackgroundColor="#8EA4D2"
                BorderColor="#8EA4D2"
                HighlightBorderColor="#8EA4D2"
                BorderThickness="3"
                TouchedDown="DemoButton_TouchedDown"
                TouchedUp="DemoButton_TouchedUp"/>
                            
            <Label x:Name="ButtonStatus" Text="Untouched" FontSize="Small" TextColor="Gray" HorizontalTextAlignment="Center" HorizontalOptions="Center"/>

            <BoxView BackgroundColor="#eee" HeightRequest="1" Margin="0,20"/>
            
            <!-- Small Buttons -->
            <Label Text="Small Buttons" HorizontalTextAlignment="Center" HorizontalOptions="Center"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <flex:FlexButton                    
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    Icon="lightbulb.png"
                    ForegroundColor="#ffffff"
                    HighlightForegroundColor="#49516F"
                    BackgroundColor="#6279B8"
                    HighlightBackgroundColor="#8EA4D2"/>

                <flex:FlexButton
                    WidthRequest="140"
                    HeightRequest="40"
                    CornerRadius="20"
                    Text="Pill Button"
                    ForegroundColor="#ffffff"
                    HighlightForegroundColor="#49516F"
                    BackgroundColor="#6279B8"
                    HighlightBackgroundColor="#8EA4D2"/>

                <flex:FlexButton
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    IsEnabled="false"
                    Icon="lightbulb.png"
                    ForegroundColor="#ffffff"
                    HighlightForegroundColor="#49516F"
                    BackgroundColor="#6279B8"
                    HighlightBackgroundColor="#8EA4D2"/>
            </StackLayout>

            <BoxView BackgroundColor="#eee" HeightRequest="1" Margin="0,20"/>

            <!-- Wide Button with Icon-->
            <Label Text="Wide Button with Icon" HorizontalTextAlignment="Center" HorizontalOptions="Center"/>
            <StackLayout HorizontalOptions="Center" Orientation="Horizontal" Margin="0,-10,0,0">
                <Button Text="Toggle IsEnabled" Clicked="ToggleIsEnabled_Clicked" FontSize="Micro">
                    <Button.HeightRequest>
                        <OnPlatform x:TypeArguments="x:Double" Default="-1">
                            <On Platform="iOS" Value="20" />
                        </OnPlatform>
                    </Button.HeightRequest>
                    <Button.TextColor>
                        <OnPlatform x:TypeArguments="Color">
                            <On Platform="iOS" Value="Gray" />
                        </OnPlatform>
                    </Button.TextColor>
                </Button>
                <Label Text="|" TextColor="Gray" VerticalOptions="Center"/>
                <Button Text="Toggle IconOrientation" Clicked="ToggleIconOrientation_Clicked" FontSize="Micro">
                    <Button.HeightRequest>
                        <OnPlatform x:TypeArguments="x:Double" Default="-1">
                            <On Platform="iOS" Value="20" />
                        </OnPlatform>                        
                    </Button.HeightRequest>
                    <Button.TextColor>
                        <OnPlatform x:TypeArguments="Color">
                            <On Platform="iOS" Value="Gray" />
                        </OnPlatform>
                    </Button.TextColor>
                </Button>
            </StackLayout>

            <flex:FlexButton
                x:Name="WideButton"
                ClickedCommand="{Binding ButtonClickedCommand}"
                IconOrientation="Right"
                HorizontalOptions="Center"
                WidthRequest="300"
                HeightRequest="76"
                CornerRadius="22"
                Icon="lightbulb.png"
                Text="Icon and Text"
                LineBreakMode="WordWrap"
                MaxLines="99999"
                BorderThickness="0,0,0,4"
                BorderColor="#49516F"
                HighlightBorderColor="#6279B8"
                ForegroundColor="#ffffff"
                HighlightForegroundColor="#49516F"
                BackgroundColor="#6279B8"
                HighlightBackgroundColor="#8EA4D2"/>
            
            <BoxView BackgroundColor="#eee" HeightRequest="1" Margin="0,10"/>

            <!-- Buttons without background -->
            <Label Text="Round Buttons without Background" HorizontalTextAlignment="Center" HorizontalOptions="Center"/>

            <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Center">
            
                <flex:FlexButton
                    HorizontalOptions="Center"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    Icon="left.png"
                    ForegroundColor="#6279B8"
                    HighlightForegroundColor="#ffffff"
                    BackgroundColor="Transparent"
                    HighlightBackgroundColor="#6279B8"/>

                <flex:FlexButton
                    HorizontalOptions="Center"
                    WidthRequest="76"
                    HeightRequest="76"
                    CornerRadius="38"
                    Icon="lightbulb.png"
                    ForegroundColor="#6279B8"
                    HighlightForegroundColor="#ffffff"
                    BackgroundColor="White"
                    HighlightBackgroundColor="#6279B8"
                    BorderColor="#6279B8"
                    HighlightBorderColor="#49516F"
                    Clicked="ButtonWithoutBackground_Clicked"
                    BorderThickness="2"/>

                <flex:FlexButton
                    HorizontalOptions="Center"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    Icon="right.png"
                    ForegroundColor="#6279B8"
                    HighlightForegroundColor="#ffffff"
                    BackgroundColor="Transparent"
                    HighlightBackgroundColor="#6279B8"/>
            </StackLayout>

            <BoxView BackgroundColor="#eee" HeightRequest="1" Margin="0,10"/>
            
            <!-- Wide Text -->
            <Label Text="Button with multi-line text and border" HorizontalTextAlignment="Center" HorizontalOptions="Center"/>
            
            <flex:FlexButton
                HorizontalOptions="Center"
                Text="Button with text only and different font family, attributes and size"
                LineBreakMode="MiddleTruncation"
                FontAttributes="Bold"
                FontFamily="TimesNewRomanPSMT"
                Margin="20,0"
                Padding="20"
                FontSize="24"
                ForegroundColor="#ffffff"
                HighlightForegroundColor="#49516F"
                BackgroundColor="#6279B8"
                HighlightBackgroundColor="#8EA4D2"
                BorderThickness="4"
                BorderColor="#49516F"
                HighlightBorderColor="#6279B8"/>

                <flex:FlexButton
                Text="Button with text only and different font family, attributes and size"
                CornerRadius="4"
                BackgroundColor="#F58423"
                 HighlightBackgroundColor="#a85915"
                 FontAttributes="Bold"
                 BorderColor="Transparent"
                 LineBreakMode="MiddleTruncation"
                 MaxLines="1"
                 BorderThickness="0"
                 HeightRequest="45"
                Padding="10,5"/>
            
                <flex:FlexButton
                HorizontalOptions="Center"
                Text="Button with text only and different font family, attributes and size"
                LineBreakMode="TailTruncation"
                FontAttributes="Bold"
                FontFamily="TimesNewRomanPSMT"
                Margin="20,0"
                Padding="20"
                FontSize="24"
                MaxLines="1"
                ForegroundColor="#ffffff"
                HighlightForegroundColor="#49516F"
                BackgroundColor="#6279B8"
                HighlightBackgroundColor="#8EA4D2"
                BorderThickness="4"
                BorderColor="#49516F"
                HighlightBorderColor="#6279B8"/>
            
                        <flex:FlexButton
                HorizontalOptions="Center"
                Text="Button with text only and different font family, attributes and size"
                LineBreakMode="WordWrap"
                MaxLines="2"
                FontAttributes="Bold"
                FontFamily="TimesNewRomanPSMT"
                Margin="20,0"
                Padding="20"
                FontSize="24"
                ForegroundColor="#ffffff"
                HighlightForegroundColor="#49516F"
                BackgroundColor="#6279B8"
                HighlightBackgroundColor="#8EA4D2"
                BorderThickness="4"
                BorderColor="#49516F"
                HighlightBorderColor="#6279B8"/>
            <BoxView BackgroundColor="#eee" HeightRequest="1" Margin="0,10"/>

            <!-- Wide Text -->
            <Label Text="Toggle Button" HorizontalTextAlignment="Center" HorizontalOptions="Center"/>

            <Button Text="Toggle IsToggled" Clicked="ToggleIsToggled_Clicked" FontSize="Micro" Margin="0,-10,0,0" HorizontalOptions="Center">
                    <Button.HeightRequest>
                        <OnPlatform x:TypeArguments="x:Double" Default="-1">
                            <On Platform="iOS" Value="20" />
                        </OnPlatform>                        
                    </Button.HeightRequest>
                    <Button.TextColor>
                        <OnPlatform x:TypeArguments="Color">
                            <On Platform="iOS" Value="Gray" />
                        </OnPlatform>
                    </Button.TextColor>
                </Button>
            
            <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Center">
            
                <flex:FlexButton
                    HorizontalOptions="Center"
                    WidthRequest="110"
                    HeightRequest="40"
                    CornerRadius="20"
                    Text="True"
                    ToggleMode="Check"
                    IsToggled="true"
                    Toggled="Handle_Toggled"
                    ForegroundColor="#ffffff"
                    HighlightForegroundColor="#ffffff"
                    BackgroundColor="#6279B8"
                    HighlightBackgroundColor="#49516F"/>

                <flex:FlexButton
                    x:Name="ToggleButton"
                    HorizontalOptions="Center"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    Icon="check.png"
                    ToggleMode="Check"
                    IsToggled="true"
                    ForegroundColor="#ffffff"
                    HighlightForegroundColor="#ffffff"
                    BackgroundColor="#6279B8"
                    HighlightBackgroundColor="#49516F"/>

                <flex:FlexButton
                    HorizontalOptions="Center"
                    WidthRequest="110"
                    HeightRequest="40"
                    CornerRadius="20"
                    Text="False"
                    ToggleMode="Check"
                    IsToggled="false"
                    Toggled="Handle_Toggled"
                    ForegroundColor="#ffffff"
                    HighlightForegroundColor="#ffffff"
                    BackgroundColor="#6279B8"
                    HighlightBackgroundColor="#49516F"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>